---
pageable: true
per_page: 1
---

<main>
  <section>
    <% if !paginate || page_number == 1 %>
      <h1>Latest Blog Posts</h1>
    <% else %>
      <h1>Past Blog Posts</h1>
    <% end %>

    <ol class="latest-posts">
      <li>
        <% page_articles.each_with_index do |article, i| %>
          <h2><%= link_to article.title, article %> <small><%= article.date.strftime('%b %e, %Y') %></small></h2> 
          <%= article.summary(300, 'â€¦') %>
          <span class="read-more"><%= link_to 'read more', article %></span>
        <% end %>
      </li>
    </ol>
  </section>

  <% if paginate %>
    <nav class="pagination">
      <% if prev_page %>
        <%= link_to '&#8826; newer posts', prev_page %>
      <% else %>
        <span>previous page</span>
      <% end %>

      <% if next_page %>
        <%= link_to 'older posts &#8827;', next_page %>
      <% else %>
        <span>next page</span>
      <% end %>
    </nav>
  <% end %>
</main>
