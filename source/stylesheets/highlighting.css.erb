<%= Rouge::Themes::Gruvbox.render(:scope => '.highlight') %>


.highlight pre.highlight {
  margin: 1rem -4rem;
  padding: 0;
}

.highlight pre.highlight .rouge-gutter {
  opacity: 0.3;
}

.highlight pre.highlight, .highlight code {
  font-size: 14px;
}

pre.highlight > code {
  display: block;
  font-family: 'Source Code Pro', 'Monaco', 'Menlo', monospace;
  font-size: 14px;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
}

@media (min-width: 44rem) and (max-width: 48rem) {
  .highlight pre.highlight {
    margin: 1rem -2rem;
  }
}

@media (max-width: 44rem) {
  .highlight pre.highlight .rouge-gutter {
    display: none;
  }
  .highlight pre.highlight {
    margin: 1rem -1rem;
    padding: 0.2rem;
  }
}
