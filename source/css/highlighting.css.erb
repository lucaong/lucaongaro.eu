<%= Rouge::Themes::Gruvbox.render(:scope => '.highlight') %>


.highlight pre {
  margin: 1rem -4rem;
  padding: 0.5rem;
  font-family: Monaco, monospace;
  font-size: 0.889em;
  overflow-x: scroll;
}
.highlight pre .rouge-gutter {
  opacity: 0.3;
}

@media (max-width: 44rem) {
  .highlight pre .rouge-gutter {
    display: none;
  }
  .highlight pre {
    margin: 1rem -1rem;
    padding: 0.2rem;
  }
}
